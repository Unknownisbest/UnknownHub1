local player = game:GetService("Players").LocalPlayer
local uis = game:GetService("UserInputService")

local gui = Instance.new("ScreenGui")
gui.Name = "StreakGui"
gui.ResetOnSpawn = false
gui.IgnoreGuiInset = true
gui.Parent = game.CoreGui

local main = Instance.new("Frame")
main.Size = UDim2.new(0, 220, 0, 90)
main.Position = UDim2.new(0.5, -110, 0.1, 0)
main.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
main.BorderSizePixel = 0
main.AnchorPoint = Vector2.new(0.5, 0)
main.Active = true
main.Draggable = true
main.Parent = gui

local uiCorner = Instance.new("UICorner")
uiCorner.CornerRadius = UDim.new(0, 10)
uiCorner.Parent = main

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 25)
title.BackgroundTransparency = 1
title.Text = "Unknown Script Hub"
title.Font = Enum.Font.GothamBold
title.TextSize = 18
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Parent = main

local button = Instance.new("TextButton")
button.Size = UDim2.new(1, -20, 0, 40)
button.Position = UDim2.new(0, 10, 0, 40)
button.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
button.Text = "Streak Badge"
button.Font = Enum.Font.GothamBold
button.TextSize = 20
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.Parent = main

local btnCorner = Instance.new("UICorner")
btnCorner.CornerRadius = UDim.new(0, 8)
btnCorner.Parent = button

button.MouseButton1Click:Connect(function()
    local args = {
        "StreakSlap"
    }
    game:GetService("ReplicatedStorage"):WaitForChild("EquipSlapEvent"):FireServer(unpack(args))

    task.wait(0.5)

    local backpack = player:WaitForChild("Backpack")
    local tool = backpack:FindFirstChild("StreakSlap")
    if tool then
        tool.Parent = player.Character
    end

    coroutine.wrap(function()
        while task.wait() do
            for i,v in pairs(game:GetService("Players"):GetPlayers()) do
                if v ~= player and v.Character then
                    local args = {
                        "slash",
                        v.Character,
                        Vector3.new(-18.544166564941406, 0.005554340314120054, -46.43397521972656)
                    }
                    player.Character:WaitForChild("StreakSlap"):WaitForChild("Event"):FireServer(unpack(args))
                end
            end
        end
    end)()
end)
